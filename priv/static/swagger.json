  "paths": {
    "/api/v1/categories": {
      "post": {
        "consumes": [
          "application/json"
        ],
        "deprecated": false,
        "description": "Create a new category in the database",
        "operationId": "GlossaryWeb.CategoryController.create",
        "parameters": [
          {
            "description": "The category data",
            "in": "body",
            "name": "word",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateCategoryRequest"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/CreateCategoryResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/CreateCategoryResponseErrors"
            }
          }
        },
        "summary": "Add a new category",
        "tags": [
          "Category"
        ]
      }
    },
    "/api/v1/categories/{category_id}/words": {
      "post": {
        "consumes": [
          "application/json"
        ],
        "deprecated": false,
        "description": "Create a new word in the database",
        "operationId": "GlossaryWeb.WordController.create",
        "parameters": [
          {
            "description": "The ID of the category",
            "in": "path",
            "name": "category_id",
            "required": true,
            "type": "string",
            "x-example": "1b1716bd-1875-44c4-8c4b-6f969fc5fdbd"
          },
          {
            "description": "The word data",
            "in": "body",
            "name": "word",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateWordRequest"
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Created",
            "schema": {
              "$ref": "#/definitions/CreateWordResponse"
            }
          },
          "400": {
            "description": "Bad Request",
            "schema": {
              "$ref": "#/definitions/CreateWordResponseErrors"
            }
          }
        },
        "summary": "Add a new word",
        "tags": [
          "Word"
        ]
      }
    },
    "/api/v1/categories/{category_id}/words/image/{image}": {
      "get": {
        "consumes": [
          "multipart/form-data"
        ],
        "description": "Show the word's description picture",
        "operationId": "GlossaryWeb.WordController.show_image",
        "parameters": [
          {
            "description": "The ID of the category",
            "in": "path",
            "name": "category_id",
            "required": true,
            "type": "string",
            "x-example": "1b1716bd-1875-44c4-8c4b-6f969fc5fdbd"
          },
          {
            "description": "Word ID",
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "x-example": "1b1716bd-1875-44c4-8c4b-6f969fc5fdbd"
          }
        ],
        "produces": [
          "multipart/form-data"
        ],
        "responses": {
          "201": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/UpdateImageWordRequest"
            }
          },
          "422": {
            "description": "Unprocessable Entity",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        },
        "summary": "Show the image of a word",
        "tags": [
          "Word"
        ]
      }
    },
    "/api/v1/categories/{category_id}/words/search?page={page}&page_size={size}&name={name}": {
      "get": {
        "deprecated": false,
        "description": "Returns JSON with all words matching listed in the database",
        "operationId": "GlossaryWeb.WordController.search_word",
        "parameters": [
          {
            "description": "Page number to be displayed",
            "in": "path",
            "name": "page",
            "required": true,
            "type": "integer",
            "x-example": 2
          },
          {
            "description": "Total number of entries per page",
            "in": "path",
            "name": "size",
            "required": true,
            "type": "integer",
            "x-example": 10
          },
          {
            "description": "The field you want to find",
            "in": "path",
            "name": "name",
            "required": true,
            "type": "string"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ShowWordsResponse"
            }
